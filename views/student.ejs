<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>STUDENTS</title>
    <h1 align="center">Student Data</h1>
</head>
<body align="center">
    <a href="/student/add">add student</a>
    <br><br>
    <table align="center" border=1px>
        <thead>
            <tr>
                <th>id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0 ; i < students.length ; i++){ %>
            <tr>
                <td> <%=students[i].id %> </td>
                <td> <%=students[i].firstName %> </td>
                <td> <%=students[i].lastName %> </td>
                <td> <%=students[i].email %> </td>
                <td> <a href="/student/edit/<%=students[i].id%>/add-subject">Add Subject</a>  </td>
                <td> <a href="/student/edit/<%=students[i].id%>">Edit</a> | <a href="/student/delete/<%=students[i].id%>"">Delete</a> </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <br><br>
    <a href="/">BACK</a>
</body>
</html>